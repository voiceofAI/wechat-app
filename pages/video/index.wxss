/* pages/video/index.wxss */

.main {
    display: inline;
}

.image {
    width: 100%;
}

.image video {
    width: 100%;
    height: 800rpx;
}

.video_gen {
    margin-top: 30rpx;
}

.video_gen button::after {
    border: none;
}

.video_gen_button {
    height: 80rpx;
    background-color: #F5B743;
    border-radius: 15rpx;
    width: 43%;
    color: #fff;
    font-size: 36rpx;
    letter-spacing: 3rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 80rpx;
}

.video_gen_box {
    display: flex;
    justify-content: center;
}

.video_gen_tables {
    margin-top: 30rpx;
    width: 96%;
    padding: 10rpx;
    /* text-align:center; */
    /* 横向滑动 */
    /* white-space: nowrap; */
    /* display: flex;
    flex-direction: row; */
}

.video_gen_issue {
    margin-left: 12rpx;
    margin-bottom: 4rpx;
    font-size: 30rpx;
    letter-spacing: 3rpx;
    color: #A1A1A1;
    width: 36%;
    background-color: transparent;
    white-space: nowrap;
}

.video_gen_icon {
    width: 120rpx;
    height: 156rpx;
    margin: 8rpx;
}

.is_checked {
    display: inline-block;
    padding: 13rpx 30rpx;
    margin: 10rpx 10rpx;
    background-color: #F5B743;
    text-align: center;
    color: #fff;
    border-radius: 15rpx;
    font-size: 26rpx;
}

.checked {
    display: inline-block;
    padding: 11rpx 28rpx;
    margin: 10rpx 10rpx;
    background-color: #fff;
    text-align: center;
    color: #A1A1A1;
    border-radius: 15rpx;
    font-size: 26rpx;
    border: 4rpx solid rgb(200, 200, 200);
}


