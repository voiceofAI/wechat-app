    z-index: 99;
    width: 60rpx;
    height: 60rpx;
    margin-top: 60%;
}

.rec_item_info {
    height: 102rpx;
    margin-top: 52rpx;
    color: #fff;
    background: rgba(0, 0, 0, 0.698);
    /* padding-bottom: 40rpx; */
