    color: #FBE8B7;
}

.start_button {
    margin-top: 36rpx;
    padding-bottom: 25rpx;
    width: 156rpx;
    height: 156rpx;
    background-color: transparent;
}

.start_button::after {
    border: none;
}

.start_button image {
    height: 120rpx;
    width: 100%;
}

.recommend {
    padding-left: 56rpx;
    position: relative;
    width: 100%;
}

.rec_info {
    display: inline-block;
    margin-top: 58rpx;
    margin-left: 20rpx;
    font-size: 36rpx;
    color: #F5B743;
}

.rec_video {
    margin-top: 28rpx;
    white-space: nowrap;
    display: flex;
}

.rec_items {
    margin: 0 16rpx;
    display: inline-block;
    width: 230rpx;
    height: 355rpx;
    background-color: #F5B743;
    border-radius: 40rpx;
    text-align: center;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.rec_item {
    width: 100%;
    height: 100%;
