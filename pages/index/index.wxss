    background: linear-gradient(#F6D658, #F5B743);
    /* background-color: ; */
    text-align: center;
    border-radius: 0 0 85rpx 85rpx;
}

.start_robot {
    margin-top: 60rpx;
    margin-left: -18rpx;
    width: 516rpx;
}

.start_info_1 {
    font-size: 34rpx;
    letter-spacing: 2rpx;
    margin-top: 56rpx;
    color: #fff;
}

.start_info_2 {
    margin-top: 14rpx;
