.main {
    display: inline;
}

.image {
    width: 100%;
}

.image video {
    width: 100%;
    height: 800rpx;
    background-color: #000;
}

.video_gens {
    margin-top: 30rpx;
    text-align: center;
}

.video_gens button::after {
    border: none;
}

.video_gen_box {
    display: inline-block;
    padding: 45rpx;
}

.video_gen_button {
    height: 80rpx;
    background-color: #F5B743;
    border-radius: 15rpx;
    width: 43%;
    color: #fff;
    font-size: 36rpx;
    letter-spacing: 3rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 80rpx;
}

.video_gen_tables {
    margin-top: 30rpx;
}

.video_icon {
    margin-bottom: 22rpx;
    width: 50rpx;
    height: 40rpx;
}

.is_checked {
    color: #F5B743;
}

.checked {
    color: #A1A1A1;
}